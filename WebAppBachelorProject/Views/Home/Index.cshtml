                function previewImage() {
                var file = fileInput.files[0];

                if (file) {
                var reader = new FileReader();

                reader.onload = function (e) {
                preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview" class="img-fluid rounded" />';
                };

                reader.readAsDataURL(file);
                }
                }

                */

            });
        </script>
    }

</body>

</html>
