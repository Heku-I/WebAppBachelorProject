@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row ml-5 ">
    <div class="col-lg-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <input asp-for="Firstname" class="form-control form-control-lg" autocomplete="Firstname"/>
                <label asp-for="Firstname" class="form-label" autocomplete="Firstname"></label>
            </div>
            <div class="mb-3">
                <input asp-for="Lastname" class="form-control form-control-lg" autocomplete="Lastname" />
                <label asp-for="Lastname" class="form-label"></label>
            </div>
            <div class="mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
