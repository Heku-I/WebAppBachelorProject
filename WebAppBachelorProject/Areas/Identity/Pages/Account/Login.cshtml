@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Squada One', sans-serif;
        }

        /* Adjust the width of the form inputs and round the corners */
        .rounded-input {
            width: 80%; /* Adjust the width as needed */
            border-radius: 10px; /* Adjust the border-radius as needed */
        }

        /* Round the corners of buttons */
        .rounded-button {
            border-radius: 10px; /* Adjust the border-radius as needed */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h1 class="text-center">Welcome back!</h1>

                <form asp-page-handler="Login" method="post" class="needs-validation" novalidate>
                    <p class="text-center">Please enter login details below</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-5 col-xs-4 rounded-pill">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control rounded-input" autocomplete="username" aria-required="true" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-5 col-xs-4 rounded-pill">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" type="password" class="form-control rounded-input" autocomplete="current-password" aria-required="true" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>

                    <p class="text-end">
                        <a asp-page="./ForgotPassword" class="text-decoration-none">Forgot password?</a>
                    </p>

                    <div class="mb-3 text-center mt-5">
                        <button type="submit" class="btn btn-dark btn-lg rounded-button">Sign in</button>
                    </div>

                    <hr />

                    <div class="mb-3 text-center">
                        <button type="button" class="btn btn-dark btn-lg rounded-button" onclick="location.href='./Register'">
                            Create a new account
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
