@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>

        body {
            overflow-y: scroll;
        }

        h1{
            margin-top: 1em; 
        }

        h1, p, label, a {
            color: #000; 
        }


        body {
            font-family: "Inter", sans-serif;
            
        }

        .rounded-input {
            width: 80%;
            border-radius: 40px;

        }
        .rounded-button {
            border-radius: 40px;
            width: 80%;
        }


        .text-end a:hover{
            color: #fff; 
       
        }

        

    </style>
</head>

<body>
    <span id=skew-bg></span>
    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <h1 class="display-4" style="font-weight: 900">
                    Welcome
                    <small class="mb-4 display-6" style="font-weight: 500">
                        back.
                        <br>
                        Enter login details
                    </small>
                </h1>

                <form asp-page-handler="Login" method="post" class="needs-validation" novalidate>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-5 col-xs-4 rounded-pill form-control-lg">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control rounded-input" autocomplete="username"
                            aria-required="true" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-5 col-xs-4 rounded form-control-lg">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" type="password" class="form-control rounded-input"
                            autocomplete="current-password" aria-required="true" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>

                    <p class="text-end">
                        <a asp-page="./ForgotPassword" class="text-decoration-none">Forgot password?</a>
                    </p>

                    <div class="mb-3 text-center mt-5">
                        <button type="submit" class="btn btn-dark btn-lg rounded-button">Sign in</button>
                    </div>

                    <hr />

                    <div class="mb-3 text-center">
                        <button type="button" class="btn btn-dark btn-lg rounded-button"
                            onclick="location.href='./Register'">
                            Create a new account
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>
