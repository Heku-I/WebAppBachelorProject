@page
@model LoginModel



@{

    ViewData["Title"] = "Login";
}



<div class="mainContainer">


    <div class="row" id="loginSite">

        <h1>Welcome back!</h1>

        <div class="">

            <form id="account" method="post">

                <p id="enterLogInText">Please enter log in details below</p>



                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>


                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <p id ="forgotPassword">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                </p>

                <div>
                    <button id="login-submit" type="submit" class="">Sign in.</button>
                </div>
                <div>


                    <hr />

                    <p >
                        <button>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account.</a>
                        </button>
                    </p>

                    <!-----
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                    ----->
                </div>
            </form>
        </div>



    </div>

</div>

<style>


    .mainContainer {
        display: flex;
        justify-content: center;
        color: white;
    }

    .mainContainer h1{
        text-align: center;
        font-size: 45px; 
        margin-bottom: 1.5em;
        margin-top: 0.5em; 
    }

    #forgotPassword {
        text-align: end;
        font-size: 15px;
    }

    #forgotPassword a {
        text-decoration: none; 
    }

    .mainContainer p {
            text-align: center;
            font-size: 20px;
    }


    #enterLogInText {
        padding-bottom: 1em;

    }


    body {
        /*  background: rgb(196,25,190);
            background: radial-gradient(circle, rgba(196,25,190,1) 0%, rgba(38,40,221,1) 100%);
            */
        font-family: 'Squada One', sans-serif;
    }

    /* Styling the main container for the form */
    #loginSite {
        padding: 2rem;
        width: 600px; /* Adjust width */
    }


    #account {
        display: flex;
        flex-direction: column;
    }

        #account p {
            margin: 0.5rem 0;
        }

    .form-control {
        padding: 1rem;
        margin-bottom: 1rem;
        border: none;
        border-radius: 20px;
        box-shadow: 0px 6px 4px 0px rgba(0, 0, 0, 0.25);
    }
    /*
        .form-floating > label {
            display: block;
